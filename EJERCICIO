# Definir una lista para almacenar las tareas
tareas = []

# Agregar tres tareas distintas utilizando el método insert()
tareas.insert(0, {"nombre": "Tarea 1", "descripcion": "Descripción de la tarea 1", "estado": "pendiente"})
tareas.insert(1, {"nombre": "Tarea 2", "descripcion": "Descripción de la tarea 2", "estado": "en progreso"})
tareas.insert(2, {"nombre": "Tarea 3", "descripcion": "Descripción de la tarea 3", "estado": "completada"})

# Eliminar una tarea utilizando el método pop()
tarea_eliminada = tareas.pop(1)

# Mostrar las tareas restantes accediendo directamente a los elementos mediante sus índices
for indice, tarea in enumerate(tareas):
    print(f"Tarea {indice + 1}:")
    print(f"Nombre: {tarea['nombre']}")
    print(f"Descripción: {tarea['descripcion']}")
    print(f"Estado: {tarea['estado']}")
    print()

